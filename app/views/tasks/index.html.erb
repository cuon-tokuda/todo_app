<h1>タスク一覧</h1>
<table>
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">タスク名</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each.with_index(1) do |task, i| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= task.name %></td>
        <td>
          <%= link_to "詳細", task %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>