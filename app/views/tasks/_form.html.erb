<%= render "layouts/error_messages" %>

<%= javascript_import_module_tag 'task-form' %>

<%= form_with model: @task, local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.submit (action_name == 'new' ? '登録' : '更新') %>
  </div>
<% end %>